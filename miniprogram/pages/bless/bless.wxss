
/* pages/chat/index.wxss */
.container{
  background-color: #f1f2f7;
}
page {
    background-color: #f1f2f7;
    padding-bottom: 36rpx;
}
/* .chat_view{
    margin-bottom: 180rpx;
} */
.chat_list {
    width: 630rpx;
    margin: 0 auto;
    margin-top: 30rpx;
    padding: 30rpx;
    min-height: 0;
    overflow: hidden;
    background-color: #f1f2f7;
    border-radius: 5px;
    box-shadow:  0 0 20px rgba(190,77,43,.2);
}
.userInfo {
  border-radius: 25px;
  display: flex;
  margin-bottom: 10rpx;
}
.chat_face {
    width: 100rpx;
    height: 100rpx;
    /* float: left; */
    margin-right: 30rpx;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}
.chat_face image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.chat_words {
    width: 500rpx;
    /* float: left; */
    font-size: 30rpx;
    line-height: 50rpx;
    color: #999;
}
.chat_meta {
    width: 100%;
    min-height: 0;
    overflow: hidden;
    margin-bottom: 10rpx;
}
.chat_user {
    display: inline-block;
    font-size: 30rpx;
    font-weight: 600;
    color: #666;
}
.chat_date {
    display: inline-block;
    font-size: 24rpx;
    color: #ccc;
    margin-left: 19rpx;
}
.preview-cnt {
  /* display: flex; */
  margin-bottom: 10rpx;
  margin-left: 19rpx;
}

.preview-image {
  margin-right: 10rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 5rpx;
}