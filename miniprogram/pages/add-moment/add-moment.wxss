page {
    background-color: #f1f2f7;
    padding-bottom: 36rpx;
}

.user-card {
  margin: 50rpx 27rpx 0;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
}

.user-head {
  flex-shrink: 0;
  margin-left: 53rpx;
  height: 100rpx;
  width: 100rpx;
}

.user-name {
  font-size: 40rpx;
  line-height: 46rpx;
  color: rgba(29, 29, 38, 0.8);
  font-weight: bold;
}

.user-split {
  height: 8rpx;
  background: #F9F9F9;
}

.user-options .option {
  display: flex;
  align-items: center;
  margin-left: 46rpx;
  margin-right: 27rpx;
  height: 128rpx;
  border-bottom: 1px solid rgba(151, 151, 151, 0.2);
}

.user-options .option:last-child {
  border-bottom: none;
}

.user-options .option-title {
  flex: 1;
  font-size: 30rpx;
  color: rgba(29, 29, 38, 0.8);
}

.user-options .option-arrow {
  width: 11rpx;
  height: 18rpx;
}







.userinfo{
  margin-top: 40rpx;
  height: 140rpx;
  background: rgb(255, 255, 255);

  display: flex;
  flex-direction: row;
  align-items: center;

  margin: 29rpx 27rpx;
  box-shadow:  0 0 20px rgba(190,77,43,.2);
  /* box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02); */
  border-radius: 10rpx;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background-color: white;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}




.comment-cnt {
  margin: 29rpx 27rpx 0;
  padding-bottom: 26rpx;
  background: #FFFFFF;
  box-shadow:  0 0 20px rgba(190,77,43,.2);
  /* box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02); */
  border-radius: 10rpx;
}

.comment-ipt {
  width: 100%;
  height: 207rpx;
  padding: 29rpx 34rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  line-height: 45rpx;
}

.comment-placeholder {
  color: rgba(29, 29, 28, 0.4);
}

.preview-cnt {
  display: flex;
  margin-top: 20rpx;
  margin-left: 29rpx;
}

.preview-image {
  margin-right: 10rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 5rpx;
}

.opr-upload {
  display: block;
  margin-top: 29rpx;
  margin-left: 29rpx; 
  width: 43rpx;
  height: 43rpx;
}

.comment-btn {
  margin: 34rpx auto;
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #F5E069;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #34373D;
}

.comment-btn.dis {
  color: rgba(52, 55, 61, 0.5);
}